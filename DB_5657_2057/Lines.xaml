<Window x:Class="DB_5657_2057.Lines"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_5657_2057"
        mc:Ignorable="d"
        Title="Lines" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Line ID" 
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <ListBox x:Name="lbLines"
                 Grid.Row="1"
                 Margin="20"
                 HorizontalContentAlignment="Center"
                 MouseDoubleClick="lbLine_MouseDoubleClick">
        </ListBox>
    </Grid>
</Window>
